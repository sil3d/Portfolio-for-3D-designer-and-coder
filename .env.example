# Flask configuration
FLASK_APP=run.py
FLASK_ENV=development # Change to 'production' for deployment

# Database configuration
# Update these with your local MySQL credentials
DB_HOST="localhost"
DB_NAME="portfolio"
DB_USER="root"
DB_PASSWORD="YOUR_DB_PASSWORD"
SQLALCHEMY_DATABASE_URI=mysql+pymysql://root:YOUR_DB_PASSWORD@localhost/portfolio
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Security Keys
# Generate a strong random string for these
LOGIN_SECRET_KEY="YOUR_SECRET_KEY_FOR_ADMIN_LOGIN"
SECRET_KEY=YOUR_RANDOM_SECRET_KEY_FOR_SESSION

# Email Configuration (Google App Password)
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to Security > App Passwords
# 3. Create a new App Password for "Mail"
# 4. Use that password here (remove spaces)
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_16_char_app_password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
DEBUG=True
